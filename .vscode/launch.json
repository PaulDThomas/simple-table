  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "name": "Attach to Browser debug",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Launch NPM web server",
      "command": "npm start",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceRoot}",
      "env": {
        "PORT": "3010"
      }
    }
  ]
}
